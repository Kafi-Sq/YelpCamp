<% layout('layouts/boilerplate')%>
<div id="cluster-map""></div>
    <h1>All Campgrounds</h1>
<% for (let camp of campground) {%> 
    <div class="card mb-4">
        <div class="row">
            <div class="col-md-4">
                <% if (camp.images.length) {%> 
                <img class="img-fluid"  src="<%= camp.images[0].url%>" alt="">
                <% }else { %> 
                    <img class="img-fluid"  src="https://res.cloudinary.com/nbrvchhc/image/upload/v1626724543/YelpCamp/lywatfosmgujrqgvoibb.jpg" alt="">
                    <% } %> 
            </div>
            <div class="col-md-8">
                <div class="card-body">
                    <div class="card-title">
                        <h5><%= camp.title%></h5>
                        <p class="card-text"><%= camp.description%></p>
                        <p class="card-text">
                            <small class="text-muted"><%= camp.location%></small>
                        </p>
                        <a href="/campgrounds/<%= camp._id%>" class="btn btn-primary">View <%= camp.title%></a>
                    </div>
                </div>
            </div>
        </div>
    </div>
<% } %> 

<script>
    const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    const campground = {features: <%-JSON.stringify(campground)%>}
</script>
<script src="/javascripts/clusterMap.js"></script>