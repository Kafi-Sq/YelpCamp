<% layout('layouts/boilerplate')%>
    <div class="row">
        <div class="col-6 offset-3">
            <h1 class="text-center">New Campground</h1>
            <form method="POST" action="/campgrounds" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" id="title" type="text" name="campground[title]" required>
                    <div class="valid-feedback">
                        Complete!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" id="location" type="text" name="campground[location]" required>
                    <div class="valid-feedback">
                        Complete!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" id="description" type="text" name="campground[description]"
                        required></textarea>
                    </textarea>
                    <div class="valid-feedback">
                        Complete!
                    </div>
                </div>
                <div class="mb3">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="image" name="image" multiple>
                        <label class="custom-file-label" for="image">Choose Image(s)</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="price-label">$</span>
                        </div>
                        <input type="text" class="form-control" id="price" name="campground[price]" placeholder="0.00"
                            aria-label="price" aria-describedby="price-label" required>
                        <div class="valid-feedback">
                            Yessirrr!
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <button class="btn btn-success">Save</button>
                </div>
            </form>

        </div>
    </div>