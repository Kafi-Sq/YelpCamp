<% layout('layouts/boilerplate')%>

    <div class="row">
        <div class="col-6 offset-3">
            <h1 class="text-center">Edit Campground</h1>
            <form method="POST" action="/campgrounds/<%= campground._id%>?_method=PUT" novalidate
                class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title:</label>
                    <input class="form-control" id="title" type="text" name="campground[title]"
                        value="<%= campground.title%>" required>
                    <div class="valid-feedback">
                        Complete!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location:</label>
                    <input class="form-control" id="location" type="text" name="campground[location]"
                        value="<%= campground.location%>" required>
                    <div class="valid-feedback">
                        Complete!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description:</label>
                    <textarea class="form-control" id="description" type="text" name="campground[description]" required><%= campground.description%>"</textarea>
                    <div class="valid-feedback">
                        Complete!
                    </div>
                </div>
                <div class="mb3">
                    <div class="custom-file">
                        <input type="file" class="custom-file-input" id="image" name="image" multiple>
                        <label class="custom-file-label" for="image">Edit Image(s)</label>
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Price:</label>
                    <div class="input-group">
                        <div class="input-group-prepend">
                            <span class="input-group-text" id="price-label">$</span>
                        </div>
                        <input type="text" class="form-control" id="price" name="campground[price]" placeholder="0.00"
                            aria-label="price" aria-describedby="price-label" value="<%= campground.price%>" required>
                        <div class="valid-feedback">
                            Completed!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <% campground.images.forEach(function(img, i){ %> 
                        <img src="<%= img.thumbnail%>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%= i %>" name="deleteImages[]" value="<%= img.filename %>">
                        </div>
                        <label for="image-<%= i %>"">Delete</label>
                    <% }) %> 
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Edit</button>
                </div>
                <a href="/campgrounds/<%= campground._id%>">Go back</a>
            </form>

        </div>
    </div>